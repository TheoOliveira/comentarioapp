<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <title>Aplicação Comentários</title>
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col">
                <div class="form-group">
                  <h4><label for="exampleFormControlTextarea1">Comentários</label></h4>
                        <form action="/" method="POST">
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="comentario"></textarea>

                      
                      <button type="submit" class="btn btn-light btn-lg btn-block">Cadastrar</button>

                    </form>
                  </div>
    </div>
    <div style="border-left:1px solid lightgrey;height:400px; margin: 30px;"></div>
    <div class="col">
        <h4>Comentários</h4>
                <ul></ul>
                       
                
            
            
        </div>
</div>
</div>
<script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="  crossorigin="anonymous"></script>    
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>


<script>
    
$(document).ready(() => {
    $.ajax({
        url: '/comentarios',
        type: 'GET',
        dataType: 'json',
        success: (rows) => {
            for (i in rows){
              $("<li id='comentariosList' style='list-style: none'>").insertAfter('ul').html(rows[i].texto)

                }
                function playSound(nome){
                  var som = new Audio(nome+'.mp3');
                  som.play();
                }
                $("<button class='btn btn-light btn-lg btn-block' onclick='playSound('4c0f6566-1c06-47c7-913d-923df2763b71')'></button>").insertAfter('li').html('Ouvir');

              
    }
});
  

});
</script>
</body>
</html>

